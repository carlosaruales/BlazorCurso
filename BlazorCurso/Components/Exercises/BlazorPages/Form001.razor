<input type="text" @bind-value="mensaje" />
<input type="text" @bind-value="text" />
<input type="button" value="Clic aquí" @onclick="ChangeText" />
<div>
    Aquí se ve el contenido del input: @mensaje
</div>

@code {
    [Parameter]
    public string Message { get; set; }

    string mensaje = "Mensaje con bind";
    string text;

    protected override async Task OnInitializedAsync()
    {
        mensaje = Message;
    }

    private void ChangeText()
    {
        mensaje = text;
    }
}